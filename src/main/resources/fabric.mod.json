{
  "schemaVersion": 1,
  "id": "mcfolders",
  "version": "${version}",

  "name": "MC Folders",
  "description": "A Minecraft mod that allows you to change directories for your worlds and resource packs",
  "authors": [
    "MrKacafirekCZ"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/MrKacafirekCZ/mcfolders"
  },

  "license": "CC0-1.0",
  "icon": "assets/mcfolders/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "mrkacafirekcz.mcfolders.MCFoldersMod"
    ],
    "modmenu": [
	  "mrkacafirekcz.mcfolders.modmenu.ModMenuIntegration"
    ]
  },
  "mixins": [
    "mcfolders.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
